<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Alessandro Cagliostro Goncalves Neves</Authors>
    <Description>CryptHash.Net is a .NET Standard Class Library (can be used with both .NET Full and .NET Core projects) for text and files symmetric (AES_256_CBC) authenticated (HMAC_SHA_256) encryption/decryption with salt, and text/files hashing (MD5, SHA1, SHA256, SHA384, SHA512, and BCrypt).</Description>
    <Copyright>Alessandro Cagliostro Goncalves Neves, 2019</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIconUrl>https://raw.githubusercontent.com/alecgn/crypthash-net/master/src/CryptHash.Net/lib/CryptHash.Net/Icon/crypthash-icon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/alecgn/crypthash-net</RepositoryUrl>
    <PackageTags>encryption decryption cryptography aes aes256 aes256cbc aescbc aescbc256 cbc hash md5 sha1 sha256 sha384 sha512 bcrypt c# c-sharp security password authentication authenticated</PackageTags>
    <AssemblyVersion>1.1.2</AssemblyVersion>
    <FileVersion>1.1.2</FileVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/alecgn/crypthash-net</PackageProjectUrl>
    <Version>1.1.2</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BCrypt.Net-Next" Version="3.1.3" />
  </ItemGroup>

</Project>
